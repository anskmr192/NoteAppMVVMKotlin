<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto">
    
    <androidx.cardview.widget.CardView
        android:layout_marginStart="5dp"
        android:layout_marginEnd="5dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="10dp"
        android:layout_marginBottom="10dp"
        app:cardBackgroundColor="#707070"
        app:cardCornerRadius="10dp"
        android:elevation="8dp">

        <View
            android:id="@+id/viewPriority"
            android:layout_width="20dp"
            android:layout_height="20dp"
            android:background="@drawable/red_dot"
            android:layout_gravity="right"
            android:layout_margin="10dp"/>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="10dp"
            android:orientation="vertical">

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/notesTitle"
                android:textStyle="italic"
                android:textSize="18sp"
                android:text="This is the Title"
                android:textColor="@color/white"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="9dp"
                android:textSize="13sp"
                android:id="@+id/notesSubTitle"
                android:text="This is the Title hjdsjoh ohohdshs oho hosuhudhsj uhshiodsi hoidwio  osdiodjoho o hois o hios sodh"
                android:textColor="#E3DDDD"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:maxLines="1"
                android:id="@+id/notesDate"
                android:layout_marginTop="10dp"
                android:textSize="16sp"
                android:text="23 Mrach 2021"
                android:textColor="@color/white"/>



        </LinearLayout>

    </androidx.cardview.widget.CardView>

</LinearLayout>